<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"

    tools:context=".ui.home.HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"

        app:title="Instagram Downloader"
        app:titleTextColor="@color/colorPrimaryDark" />

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:padding="12dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_insta_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_insta_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/instagram_link"
                android:lines="2"
                android:maxLines="2"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/layout_action_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_layout_insta_link"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_paste_link"
                android:background="@drawable/custom_btn3"
                android:layout_width="1dp"
                android:textColor="@color/whit"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:textAllCaps="false"
                android:text="@string/paste_link" />

            <Button
                android:id="@+id/button_download"
                android:background="@drawable/custom_btn2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/whit"
                android:alpha="0.5"
                android:drawableLeft="@drawable/ic_file_download"
                android:enabled="false"
                android:text="@string/download" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_action_buttons"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="52dp"
            android:scaleType="fitCenter"
          />

    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_save"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_save"
        android:tint="@color/colorTextLight" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>